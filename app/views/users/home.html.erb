<% if current_user.try(:admin?) %>
  <h3 style='color: red; text-decoration: underline'> ADMIN CONSOLE </h3>
<% end %>

<h2> Hello <%= current_user.try(:email) %>, welcome to Williams Soils and Sod! </h2><br>

<%= link_to "Sign In", new_user_session_path unless current_user %><br>
<%= link_to "Sign Up", new_user_registration_path unless current_user %><br><br>

<%= link_to "Create Order", new_order_path unless !current_user%><br><br>

<% if policy(Item.new).index? %>
  <%= link_to "View/Edit/Create Items", items_path %>
<% end %><br><br>

<% if policy(Account.new).index? %>
  <%= link_to "View Accounts", accounts_path %>
<% end %><br><br>

<%= link_to "Sign Out", destroy_user_session_path, method: :delete unless !current_user%><br>
