<% if current_user.try(:admin?) %>
  <h3 style='color: red; text-decoration: underline'> ADMIN CONSOLE </h3>
<% end %>
<h1> Hello, welcome to Williams Soils and Sod! </h1><br>

<%= link_to "Sign In", new_user_session_path unless current_user %><br>
<%= link_to "Sign Up", new_user_registration_path unless current_user %><br><br>

<%#= link_to "Create Order", new_account_order_path unless !current_user%><br>
<%= link_to "Create Order", new_order_path unless !current_user%><br>
